					text = <"Flexor response">
					description = <"Abnormal flexion to pain.">
				>
				["at0023"] = <
					text = <"Withdrawal">
					description = <"Flexion withdrawal from pain.">
				>
				["at0024"] = <
					text = <"Localises pain">
					description = <"Localised movement in response to pain.">
				>
				["at0026"] = <
					text = <"Total">

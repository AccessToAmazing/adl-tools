					text = <"Tree">
					description = <"@ internal @">
				>
				["at0028"] = <
					text = <"Confounding factors">
					description = <"Comments about any factors or issues about the measurement that may impact up on the final score, e.g. known sedation, aphasia, and deafness, or patient is intubated.">
				>
				["at0029"] = <
					text = <"Spontaneous">
					description = <"Opens eyes spontaneously.">
				>
				["at0030"] = <

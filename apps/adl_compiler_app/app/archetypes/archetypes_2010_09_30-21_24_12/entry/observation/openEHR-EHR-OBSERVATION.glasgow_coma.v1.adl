					description = <"Eye Motor Verbal profile expressing each component individually. Used especially when one component cannot be assessed eg when the subject is intubated or paralysed.">
				>
				["at0032"] = <
					text = <"Obeys commands">
					description = <"Follows simple verbal commands.">
				>
